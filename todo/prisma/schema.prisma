// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id    Int    @id @unique @default(autoincrement())
  name  String
  value Int


  @@map("test")
}

enum Role {
  USER
  ADMIN

  @@map("role")
}

model User {
  id        Int      @id @unique @default(autoincrement())
  email     String
  senha     String
  role      Role     @default(USER)
  // todo          Todo[]
  createdAt DateTime @default(now())

  @@map("user")
}
